rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Link scans collection - more permissive for debugging
      match /link_scans/{scanId} {
        allow read, write, delete: if request.auth != null && 
          request.auth.uid == userId;
      }
      
      // Profile analysis collection - more permissive for debugging  
      match /profiles/{profileId} {
        allow read, write, delete: if request.auth != null && 
          request.auth.uid == userId;
      }
      
      // Investigations collection - more permissive for debugging
      match /investigations/{investigationId} {
        allow read, write, delete: if request.auth != null && 
          request.auth.uid == userId;
      }
      
      // Investigation scans collection - more permissive for debugging
      match /investigation_scans/{scanId} {
        allow read, write, delete: if request.auth != null && 
          request.auth.uid == userId;
      }
    }
    
    // Allow read/write to authenticated users for debugging (temporary)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}