{
  "name": "infoscope-osint",
  "version": "2.3.0",
  "description": "Professional OSINT Investigation Platform v2.3.0 - Advanced desktop and web application with 15+ real API integrations for IP intelligence, email analysis, domain research, social media reconnaissance, phone lookup, and geolocation services. Features built-in secure browser, modern UI, cross-platform support, and privacy-first design.",
  "author": {
    "name": "Ivo Pereira",
    "email": "ivo@ivocreates.gmail.com",
    "url": "https://ivocreates.site"
  },
  "license": "CC-BY-SA-4.0",
  "main": "public/electron.js",
  "homepage": "https://infoscope-osint.web.app",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-electron": "set \"REACT_APP_HOMEPAGE=./\" && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build-electron && electron-builder",
    "electron-pack-win": "npm run build-electron && electron-builder --win",
    "electron-pack-mac": "npm run build-electron && electron-builder --mac",
    "electron-pack-linux": "npm run build-electron && electron-builder --linux",
    "electron-pack-all": "npm run build-electron && electron-builder --win --mac --linux",
    "preelectron-pack": "npm run build-electron",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy-github": "npm run build && echo 'Deploy to GitHub Pages or releases'",
    "serve": "npm run build && npx serve -s build -p 3000",
    "package": "npm run electron-pack-all",
    "release": "npm run electron-pack-all",
    "dist": "npm run build && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.ivocreates.infoscope-osint",
    "productName": "InfoScope OSINT Platform v2.3.0",
    "copyright": "Copyright Â© 2025 Ivo Pereira - Licensed under CC BY-SA 4.0",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "public/electron.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "publisherName": "InfoScope Team",
      "verifyUpdateCodeSignature": false
    }
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/dompurify": "^3.0.5",
    "axios": "^1.12.2",
    "docx": "^9.5.1",
    "dompurify": "^3.2.7",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.6.2",
    "electron-window-state": "^5.0.3",
    "firebase": "^10.7.1",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.303.0",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^5.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^7.6.0",
    "cross-env": "^10.1.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
