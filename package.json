{
  "name": "infoscope-osint",
  "version": "1.1.0",
  "description": "Professional OSINT Investigation Platform - Desktop and Web application for comprehensive intelligence gathering with built-in browser, Google dorking, and 37+ OSINT tools",
  "main": "public/electron.js",
  "homepage": "https://infoscope-osint.web.app",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "electron-pack-win": "npm run build && electron-builder --win",
    "electron-pack-mac": "npm run build && electron-builder --mac",
    "electron-pack-linux": "npm run build && electron-builder --linux",
    "electron-pack-all": "npm run build && electron-builder --win --mac --linux",
    "preelectron-pack": "npm run build",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy-github": "npm run build && echo 'Deploy to GitHub Pages or releases'",
    "serve": "npm run build && npx serve -s build -p 3000",
    "package": "npm run electron-pack-all",
    "release": "npm run electron-pack-all"
  },
  "build": {
    "appId": "com.infoscope.osint",
    "productName": "InfoScope OSINT",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "axios": "^1.12.2",
    "electron-is-dev": "^2.0.0",
    "firebase": "^10.7.1",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^7.6.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
