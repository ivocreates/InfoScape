{
  "name": "infoscope-osint",
  "version": "1.1.0",
  "description": "Professional OSINT Investigation Platform - Desktop and Web application for comprehensive intelligence gathering with built-in browser, Google dorking, and 48+ OSINT tools. Features enhanced UI/UX, password toggles, dark mode, legal framework, and improved stability.",
  "author": {
    "name": "Ivo Pereira",
    "email": "ivo@ivocreates.gmail.com",
    "url": "https://ivocreates.site"
  },
  "main": "main.js",
  "homepage": "https://infoscope-osint.web.app",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "electron-pack-win": "npm run build && electron-builder --win",
    "electron-pack-mac": "npm run build && electron-builder --mac",
    "electron-pack-linux": "npm run build && electron-builder --linux",
    "electron-pack-all": "npm run build && electron-builder --win --mac --linux",
    "preelectron-pack": "npm run build",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy-github": "npm run build && echo 'Deploy to GitHub Pages or releases'",
    "serve": "npm run build && npx serve -s build -p 3000",
    "package": "npm run electron-pack-all",
    "release": "npm run electron-pack-all",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "build": {
    "appId": "com.infoscope.osint",
    "productName": "InfoScope OSINT Platform",
    "copyright": "Copyright Â© 2025 @ivocreates - Licensed under CC BY-SA 4.0",
    "directories": {
      "buildResources": "build-resources",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "InfoScope OSINT Platform"
    },
    "publish": {
      "provider": "github",
      "owner": "ivocreates",
      "repo": "InfoScape"
    }
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/dompurify": "^3.0.5",
    "axios": "^1.12.2",
    "dompurify": "^3.2.7",
    "electron-is-dev": "^2.0.0",
    "firebase": "^10.7.1",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^7.6.0",
    "cross-env": "^10.1.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.6.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
